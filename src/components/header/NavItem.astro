---
export interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;
---

<li><a href={url}>{title}</a></li>

<style>
  li {
    margin: 0;
    padding: 0;
    text-align: center;
  }

  a {
    color: inherit;
    text-decoration: none;
    padding: 0 1rem;
    height: 100%;
    display: flex;
    align-items: center;
  }
</style>
