---
import { Icon } from "astro-iconify";

export interface Props {
  url: string;
  icon: string;
}

const { url, icon } = Astro.props;
---

<li>
  <a href={url} target="_blank">
    <Icon size="32" name={icon} />
    <span>{url}</span>
  </a>
</li>

<style>
  li {
    margin: 0;
    padding: 0;
    text-align: center;
  }

  a {
    color: inherit;
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 0 0.5rem;
    opacity: 0.85;
    transition: opacity 200ms;
  }

  a:hover,
  a:focus {
    opacity: 1;
  }

  span {
    font-size: 0;
  }
</style>
