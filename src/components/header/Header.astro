---
import NavItem from "./NavItem.astro";
import { Icon } from "astro-icon/components";
---

<header
  class="shadow-canvas-50 sticky top-0 z-10 flex h-[60px] justify-between bg-canvas font-secondary shadow-lg shadow-canvas"
>
  <nav>
    <ul class="nav flex h-full whitespace-nowrap text-base">
      <NavItem title="About" url="/#" className="max-hbp:hidden" />
      <NavItem title="Skills" url="/#skills" />
      <NavItem title="Projects" url="/#projects" />
      <NavItem title="Contact me" url="/#contact-me" />
    </ul>
  </nav>
  <div>
    <ul
      class="flex h-full items-center justify-between justify-self-stretch pr-2"
    >
      <li>
        <a
          href="https://github.com/lonelyteapot"
          target="_blank"
          class="flex items-center gap-2 px-2 opacity-80 transition-opacity duration-100 hover:opacity-100 max-[410px]:text-[0]"
        >
          <Icon size={32} name="mdi:github" />
          <span>GitHub</span>
        </a>
      </li>
    </ul>
  </div>
</header>

<style>
  header {
    grid-area: header;
    padding: 0 calc(50% - var(--max-content-width) / 2);
  }
</style>

<style is:global>
  html {
    --header-height: 100px;
  }

  @media screen(hbp) {
    html {
      --header-height: 60px;
    }
  }
</style>
