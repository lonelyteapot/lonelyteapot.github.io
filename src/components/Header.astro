---
import HeaderNavLink from "./HeaderNavLink.astro";
import HeaderSocialLink from "./HeaderSocialLink.astro";

// @ts-ignore
import { navLinks } from "../../data/navigation.yaml";
import { SOCIAL_LINKS } from "../config";

export interface Props {
    fullName: string;
    tagline: string;
    username: string;
}

const { fullName, tagline, username } = Astro.props;
---

<header id="header">
    <div id="intro">
        <h1 class="name">{fullName}</h1>
        <p class="title">{tagline}</p>
        <div class="links">
            {SOCIAL_LINKS.map((link) => <HeaderSocialLink link={link} />)}
        </div>
    </div>
    <div id="header-row">
        <a id="header-logo" href="/">@{username}</a>
        <nav id="header-nav">
            {
                navLinks.map((link) => (
                    <HeaderNavLink url={link.url} title={link.title} />
                ))
            }
        </nav>
    </div>
</header>
