---
export interface Props {
  type?: "submit" | "reset" | "button";
}

const { type } = Astro.props;
---

<button
  class="min-w-"
  class:list={[
    type,
    "flex min-w-[6em] cursor-pointer items-center justify-center gap-1.5 rounded-md bg-primary px-3 py-2 font-primary text-canvas transition-colors duration-100 hover:bg-primary/80",
  ]}
  type={type}><slot /></button
>
