---
import Button from "../components/Button.astro";
---

<section id="contact-me">
  <h2>Contact me</h2>
  <form
    action="https://formspree.io/f/myyojnjw"
    method="POST"
    class="grid flex-1 basis-[480px] gap-3"
  >
    <label class="input message rounded-sm rounded-t-lg">
      <textarea name="message" placeholder=" " required></textarea>
      <span class="label">Message</span>
    </label>
    <label class="input email rounded-b-sm rounded-t-lg">
      <input type="email" name="email" placeholder=" " required />
      <span class="label">your-email@example.com</span>
    </label>
    <Button type="submit">Send</Button>
  </form>
</section>

<style>
  form {
    grid-template-columns: 1fr auto;
    grid-template-rows: minmax(200px, auto) auto;
    grid-template-areas: "message message" "email submit";
  }

  .input {
    background-color: var(--color-canvas);
    box-shadow: var(--shadow-md);
  }

  input,
  textarea {
    color: var(--color-on-canvas);
  }

  .message {
    grid-area: message;
  }

  .email {
    grid-area: email;
  }

  .submit {
    grid-area: submit;
  }
</style>
