---
import { Icon } from "astro-icon/components";

export interface Props {
  icon: string;
}

const { icon } = Astro.props;
---

<li class="skill">
  <span><slot /></span>
  <Icon name={icon} size={32} />
</li>

<style>
  li {
    display: flex;
    flex-direction: row-reverse;
    justify-content: start;
    align-items: center;
    gap: 0.75em;
    font-size: 16px;
  }

  span {
    text-align: center;
    color: var(--color-on-canvas);
  }
</style>
